{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "outDir": "./out-tsc/test",
    "composite": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "jest.setup.js",
    "globals.d.ts"
  ],
  "exclude": [
      "node_modules",
      "build",
      ".next"
  ]
}
